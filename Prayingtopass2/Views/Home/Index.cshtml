@model Prayingtopass.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/index.css">
</head>
<body>
    <div class = "register">
        <h1>Register</h1>
        <form asp-action="Register" asp-controller="Home" method="post">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName"><br><br>

            <label asp-for="LastName"></label>
            <input asp-for="LastName"><br><br>

            <label asp-for="Email"></label>
            <input asp-for="Email"><br><br>

            <label asp-for="Password"></label>
            <input asp-for="Password"><br><br>

            <label asp-for="Confirm"></label>
            <input asp-for="Confirm"><br><br>

            <input type="submit" value="Register">
        </form>
    </div>

    <div class="validations">
        <span asp-validation-for="FirstName"></span>
     <span asp-validation-for="LastName"></span>
     <span asp-validation-for="Email"></span>
     <span asp-validation-for="Password"></span>
     <span asp-validation-for="Confirm"></span>
    </div>

    <partial name="LoginPartial"></partial>
</body>
</html>